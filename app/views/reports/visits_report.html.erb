    //     });
    //   }
    // });

    // set default date
    $("#schedule-from-datepicker").datepicker("setDate", new Date());

    $('.search_button').click(function(){
      var u_id = $("#user_visit").val();
      var dt = $('#schedule-from-datepicker').val();
      if( u_id != ""){
        $.ajax({
          type: "get",
          url: "/user_visits.js",
          data: {user_id: u_id, date: dt},
          // dataType: "json",
          success:function(result){
            console.log("success");
