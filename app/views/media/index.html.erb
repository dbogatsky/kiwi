<div class="row">
    <div class="col-sm-9">
        <div class="row filemanager">
            <div id="flash_messages">
                <% flash.each do |key, value| %>
                  <%= content_tag(:div, value, :class => "alert alert-success fade in flash #{key}") %>
                <% end %>
            </div>  
            <div id="fm-files-container">
            </div>
            <!-- Share media file Popup -->
            <div class="modal fade" id="share-media">
                <div class="modal-dialog">

                    <!-- Popup content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="buttson" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Share this media file:</h4>
                        </div>
                        <div class="modal-body">
                            <!--https://github.com/huacnlee/social-share-button-->
                            <%= social_share_button_tag("Share Media File", :url => "https://www.google.co.in/images/nav_logo242.png", :image => "https://www.google.co.in/images/nav_logo242.png", :desc=> "The summary of page") %>
                        </div>
                    </div>

                </div>
            </div>
        </div><!-- row -->
    </div><!-- col-sm-9 -->
    <div class="col-sm-3">
        <div class="fm-sidebar">

            <!--button class="btn btn-primary btn-block">Upload Files</button-->
            <button class="btn btn-primary btn-block" id="upload-file">Upload File</button>


            <!-- Upload file Popup -->
            <div class="modal fade" id="upload">
                <div class="modal-dialog">

                    <!-- Popup content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Upload Media File</h4>
                        </div>
                        <div class="modal-body">

                            <%= form_tag({:action => 'upload_file'}, :multipart => true) do %>
                              <%= text_field_tag :filename %> 
                              <%= file_field 'media', 'payload' %>
                              <%= hidden_field_tag :folder_id, '0' %>
                              <%= submit_tag "Upload" %>
                            <% end %>

                        </div>
                    </div>

                </div>
            </div>
            
            <!-- Send Media File in email Popup -->
            <div class="modal fade" id="email-media-file">
                <div class="modal-dialog">
                    <!-- Popup content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Email</h4>
                        </div>
                        <div class="modal-body">
                            <label>Send an email by filling in the details below:</label>
                            <%= form_tag({:action => 'email_file'}, :multipart => true) do %>
                              <div class="div-oth-input"><%= text_field_tag 'to' , nil, placeholder: "To", class: 'form-control'%></div>
                               <div class="div-oth-input"><%= text_field_tag 'subject',nil, placeholder: "Subject", class: 'form-control'%></div>
                               <div class="div-oth-input"><%= text_area_tag 'message', nil, :rows => 4, :cols => 50, placeholder: "Message", class: 'form-control'%></div>
                              

                              <%= hidden_field_tag :cdn_url, 'https://orchard-api-staging.s3.amazonaws.com/media/images/payloads/000/000/071/original/indeex.jpeg?AWSAccessKeyId=AKIAIIM4DYDQJUUF4W4Q&Expires=1451288320&Signature=mryzDXjftkje9QAkfQSXc4wysEE%3D' %>
                               <div class="div-oth-input"><i class="fa fa-paperclip"></i> Index.jpeg</div>
                              <%= submit_tag "Send",:id=> "send", :class => "btn btn-primary" %>
                            <% end %>
                        </div>
                    </div>

                </div>
            </div>



            <div class="mb30"></div>

            <h5 class="subtitle">Folders <a class="pull-right" id="add-folder">+ Add New Folder</a></h5>

            <div id="create-folder" style="display:none">
                <%= form_tag media_path do %>
                  <%= text_field_tag :name, ' ',:class => 'form-control form-control-folder' %>
                  <%= hidden_field_tag :type,'Folder' %>
                  <%= submit_tag "Create", :id=> "create", :class => "btn btn-primary" %>
                <% end %>
            </div>
            <div id="msg"></div>  

            <ul class="folder-list">

                <% @medias.each do |folder| %>
                  <% if folder.type == 'folder' %>
                <li class="folder-id-<%= folder.id %>">
                        <a href="javascript:void(0);" class="open-folder" data-id="<%= folder.id %>"><i class="fa fa-folder-o"></i> <%= folder.name %></a>
                        <div class="edit-div-right">
                        <a href="javascript:void(0);" class="edit-folder" data-id="<%= folder.id %>"><i class="fa fa-pencil"></i></a>
                        <a href="javascript:void(0);" class="delete-folder" data-id="<%= folder.id %>"><i class="fa fa-trash-o"></i></a>
                        </div>
                        <div class="edit-folder-form" style="display:none">
                            <%= form_tag media_path, :class => "save-folder-frm" do %>
                              <%= text_field_tag :name, folder.name , :class => 'form-control form-control-2' %>
                              <%= hidden_field_tag :type,'Folder' %>
                              <%= hidden_field_tag :folder_id, folder.id %>
                              <%= submit_tag "Save", :class => "btn btn-primary save-folder" %>
                            <% end %>
                        </div>
                    </li>
                  <% end %>
                <% end %>


            </ul>

            <div class="mb30"></div>

