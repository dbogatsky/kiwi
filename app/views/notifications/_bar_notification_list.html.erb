<style type="text/css">
.notification-icon {
    border-radius: 10%;
    height:30px;
    width:30px;
}
.thumb-img {
    height: 60%;
    position: relative;
    margin-top: 5px;
}
</style>

<h5 class="title">You Have <%=unread_items.count%> New Notifications</h5>
<ul class="dropdown-list gen-list">
  <%unread_items.first(5).each do |k,v| %>
    <%notification = Notification.find(k)%>
    <li class="new">
      <a href="/notifications/<%=k%>" data-remote="true" rel="nofollow" data-method="patch">
      <!-- <a href="/accounts/<%#=v.account_id%>?notification_id=<%#=k%>"> -->
      <%if notification.type == 'reminder' || notification.type == 'meeting_reminder'%>
        <%if v.type.eql? 'reminder'%>
          <span class="thumb notification-icon" style="background: #f0ca45;">
            <img class="thumb-img" src="/assets/vertical-timeline/img/cd-icon-bell.svg" alt="Reminder">
          </span>
        <%elsif v.type.eql? 'meeting'%>
          <span class="thumb notification-icon" style="background:#1cc7c2;">
            <img class="thumb-img" src="/assets/vertical-timeline/img/cd-icon-calendar.svg" alt="Meeting">
          </span>
        <%elsif v.type.eql? 'quote'%>
          <span class="thumb notification-icon" style="background:#e91e63;">
             <img  class="thumb-img"  src="/assets/vertical-timeline/img/cd-icon-calculator.svg" alt="Quote">
          </span>
        <%end%>
      <%else%>
        <span class="thumb notification-icon" style="background: #333;">
          <img class="thumb-img" src="/assets/vertical-timeline/img/cd-icon-briefcase.svg" alt="Reminder">
        </span>
      <%end%>
      <span class="desc">
        <span class="name"><small><%=notification.type == 'account_status_change' ? v.name : v.title%></small><span class="badge badge-success">new</span></span>
        <span class="msg"><%=Chronic.parse(notification.created_at).in_time_zone(current_user.time_zone).strftime("%b %d")%></span>
      </span>
      </a>
    </li>
  <%end%>
  <li class="new"><a href="<%=notifications_path%>">Read All Notifications</a></li>
</ul>

