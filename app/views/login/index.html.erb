<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Front-end Software Version: <%= APP_CONFIG['software_version'] %> -->

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="shortcut icon" href="images/favicon.png" type="image/png">

  <title><%= APP_CONFIG['software_title'] %></title>
  
  <%= stylesheet_link_tag 'application', media: 'all' %>

  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCgqcu1Jqqdc0a4hVnfRvw0hyJM832rqXA&libraries=places"></script>
  <%= javascript_include_tag 'application' %>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="/assets/bootstrap/js/html5shiv.js"></script>
  <script src="/assets/bootstrap/js/respond.min.js"></script>
  <![endif]-->
</head>

<body class="signin">
	
	
	<section>
	  
	    <div class="signinpanel">
	    
			<div class="row">
			
				<div class="col-xs-3"></div>
				
				<div class="col-md-7">
					<%= form_tag(user_login_url) do |f| %>
            <div class="row">
              <div class="col-xs-1"></div>
              <div class="col-xs-10">
  						  <img src="/assets/images/logo_focus.png" width="90%" alt="Code10" class="img-responsive center-block" />
  						  <div class="mb30"></div>
						  </div>
						  <div class="col-xs-1"></div>
            </div>
            <div class="row">
						  <div class="col-md-12">
    						<% if flash[:danger] %>
    							<div class="alert alert-danger">
    								<strong>Sorry!</strong> <%= flash[:danger] %>
    	              			</div>
                  			<% end %>
                  			
                  			<% if flash[:recover_success] %>
    							<div class="alert alert-success">
    								<strong>Great!</strong> <%= flash[:recover_success] %>
    							</div> 
    						<% end %>  
    						
    						<input type="text" name="email" id="email" class="form-control uname" placeholder="Email" autofocus required>
    						<input type="password" name="password" id="password" class="form-control pword" placeholder="Password" required>
    						<% #<a href="/login/forgot"><small>Forgot Your Password?</small></a> %>
    						<br /><br />
    						<input type="submit" class="btn btn-block btn-primary sharp" value="Login"> 
    				  </div><!-- col 12 --> 
            </div>               
          <% end %>
				</div>
				
				<div class="col-xs-3"></div>
		</div><!-- row -->
    
    </div><!-- signin -->
  
</section>


</body>
</html>






