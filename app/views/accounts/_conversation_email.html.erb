<div class="modal fade account-action-email" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" data-backdrop="static" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
            <h4 class="modal-title">Email</h4>
        </div>
        <div class="modal-body">
        <p>Send an email by filling in the details below:</p>
        <div class="panel panel-default">
              <form>
            <div class="panel-body">
              <div class="row row-pad-5">
                <div class="col-lg-10">
                  <input type="email" name="email" placeholder="my.email.account@company.com" class="form-control"  required="required" />
                </div>
              </div><!-- row -->
              <div class="row row-pad-5">
              <div class="col-lg-10">
                  <input type="url" name="subject" placeholder="Subject" class="form-control" required="required"  />
                </div>
              </div><!-- row -->
              <textarea class="form-control" rows="5" placeholder="Message" required="required"></textarea>
            </div><!-- panel-body -->
            <div class="panel-footer">
              <button class="btn btn-primary">Send Email</button>
              <button type="reset" class="btn btn-default">Reset</button>
                  </div>
              </form>
        </div><!-- panel -->
        </div><!-- modal body -->
    </div><!-- modal content -->
  </div><!-- modal dialog -->
</div><!-- modal -->