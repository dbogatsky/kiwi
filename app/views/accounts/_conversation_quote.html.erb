<div class="modal fade conversation-quote-modal-form" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" data-backdrop="static" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
        <h4 class="modal-title">Add Quote</h4>
      </div>
      <div class="modal-body">
        <%= form_tag(account_add_quote_url) do %>
          <div class="panel panel-default">
              <div class="panel-body">
                <div class="row row-pad-5">
                  <div class="col-lg-12">
                    <input type="text" name="conversation_item[title]" placeholder="Title" class="form-control" required="required" />
                  </div>
                </div>
                <input type="hidden" name="conversation_item[status]" value="open">
                <div class="row row-pad-5">
                  <div class="col-lg-12">
                    <input type="text" name="conversation_item[amount]" placeholder="Amount" class="form-control"/>
                  </div>
                </div>
                <div class="row row-pad-5">
                  <div class="col-lg-4">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                      <input type="text" class="form-control datepicker" placeholder="mm/dd/yyyy" id="" name="follow_date" required="required" />
                     </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                      <div class="bootstrap-timepicker"><input type="text" class="form-control follow_time" name="follow_time" required="required"/></div>
                    </div>
                  </div>
                </div>
                <div class="row row-pad-5">
                  <div class="col-lg-4">
                    <label class="radio-inline">
                      <input type="radio" name="expires" id="exp_in" checked>Expires in
                    </label>
                  </div>
                  <div class="col-lg-4">
                    <input type="number" value = '30' class="form-control get_date" rows="5" name="expires_in"/>
                  </div>
                  <div class="col-lg-4">
                    <input type="text" class="form-control display_date" style="border-width: 0px; background-color: white;" disabled="true" />
                  </div>
                </div>
                <div class="row row-pad-5">
                  <div class="col-lg-4">
                    <label class="radio-inline">
                      <input type="radio" name="expires" id= "exp_after">Expires after
                    </label>
                  </div>
                  <div class="col-lg-4">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                      <input type="text" class="form-control datepicker set_date" placeholder="mm/dd/yyyy" name="expires_after" disabled="true"/>
                     </div>
                  </div>
                </div>
                <div class="row row-pad-5">
                  <div class="col-lg-12">
                    <textarea class="form-control wysihtml5" id="new_quote" rows="5" placeholder="Description" name="conversation_item[body]"></textarea>
                  </div>
                </div>
                <input type="hidden" name="conversation_item[account_id]" value=<%= @account.id %> >
                <input type="hidden" name="conversation_item[type]" value="quote" >
              </div><!-- panel-body -->
              <div class="panel-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="reset" class="btn btn-default">Reset</button>
              </div>
          </div><!-- panel -->
        <% end %>
      </div><!-- modal body -->
    </div><!-- modal content -->
  </div><!-- modal dialog -->
</div><!-- modal -->

 <script type="text/javascript">
    $('.follow_time').timepicker({
      minuteStep: 15
    });

    var final_date
    function getdate(e) {
      var current_date = new Date();
      current_date.setDate(current_date.getDate() + parseInt(e));
      var dd = current_date.getDate();
      var mm = current_date.getMonth()+1;
      var y = current_date.getFullYear();
      final_date = mm + '/' + dd + '/' + y;
    }

    $(".get_date").change(function(){
      var d = $(this).val()
      getdate(d)
      $(".display_date").val(final_date)
    })

    getdate(30);
    $(".display_date").val(final_date)

    $("#exp_in").click(function(){
      if($(this).is(':checked')){
        $(".get_date").attr('disabled', false)
        $(".set_date").attr('disabled', true)
      }
    })

    $("#exp_after").click(function(){
      if($(this).is(':checked')){
        $(".set_date").attr('disabled', false)
        $(".get_date").attr('disabled', true)
      }
    })
    // is(':checked')
 </script>