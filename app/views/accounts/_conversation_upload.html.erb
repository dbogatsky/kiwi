 <span><a href="javascript:void(0);" class="add_attachment"><i class="fa fa-plus" aria-hidden="true"></i> Attachment(s)</a></span>
  <div class="drop_zone_height hidden">
    <div class="col-lg-12 dropzone drop_zon_box drop_zon_box_for_<%=box_for%>">
    </div>
  </div>
  <script type="text/javascript">
		Dropzone.autoDiscover = false;
		$("div.drop_zon_box_for_<%=box_for%>").dropzone({
		  url: '/accounts/add_conversation_attachment',
		  uploadMultiple: true,
		  init: function() {
		    var myDropzone = this;
		    $(document).on("click","#submit_<%=box_for%>_form",function(e) {

          if($("#submit_conversation_<%=box_for%>_form").checkValidity()) {
            e.preventDefault();
            e.stopPropagation();
            $("#submit_conversation_<%=box_for%>_form").submit();
            myDropzone.processQueue();
          }

		    });
		  },
		  accept: function(file, done) {
        $("#submit_<%=box_for%>_form").val("Upload and Save")
        return done();
      },
      removedfile: function(file) {
        var _ref;
        if (file.previewElement) {
          if ((_ref = file.previewElement) != null) {
            _ref.parentNode.removeChild(file.previewElement);
          }
        }
        if (this.files.length == 0){
          $("#submit_<%=box_for%>_form").val("Save")
        }
        return this._updateMaxFilesReachedClass();
      },
		});
  </script>