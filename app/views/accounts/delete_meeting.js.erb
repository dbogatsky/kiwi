<%if @show_alert%>
  $('#preloader').hide();
<%end%>
$('#preloader').css('opacity', 0.8);
<%if @show_alert %>
   $(".delete-future-meeting-modal-form").modal('show');
   $(".delete-future-meeting-modal-form").data('id', '<%=@conversation%>')
   $(".delete-future-meeting-modal-form").data('account_id', '<%=@account.id%>')
   $(".delete-future-meeting-modal-form").data('select_date', '<%=params[:date]%>')
   $(".delete-future-meeting-modal-form").data('select_user_id', '<%=params[:user_id]%>')
