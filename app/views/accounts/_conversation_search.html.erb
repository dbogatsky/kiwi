<div class="row">
	<div class="col-md-10">
    <div class="input-group" id="adv-search">
      <input type="text" class="form-control" style="height:41px;" placeholder="Search" />
      <div class="input-group-btn">
        <div class="btn-group" role="group">
          <div class="dropdown dropdown-lg">
            <button type="button" class="btn btn-default dropdown-toggle close_tab" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
            <div class="dropdown-menu dropdown-menu-right conversation-search" id="conversation_search_div" role="menu">
              <%= form_tag search_account_path, method: :get, remote: :true do |f| %>
                <div class="form-group mb20">
                  <label for="filter">Type</label>
                  <select name="search[type_cont]" class="form-control input-sm">
                      <option value="" selected="">All</option>
                      <option value="meeting">Meetings</option>
                      <option value="note">Notes & Reminders</option>
                      <option value="email">Emails</option>
                  </select>
                </div>
                <div class="form-group mb30">
                  <label for="filter">Date Range</label>
                    <div class="input-daterange input-group">
                      <input type="text" class="form-control datepicker" placeholder="dd/mm/yy" name="search[data_gteq]" id="search-from-datepicker"/>
                         <span class="input-group-addon">to</span>
                      <input type="text" class="form-control datepicker" placeholder="dd/mm/yy" name="search[date_lteq]" id="search_datepicker_end">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary submit_search"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search</button>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :custom_css do %>
  <style>
    .dropdown.dropdown-lg .dropdown-menu {
        margin-top: 0px;
        padding: 6px 20px;
    }
    .input-group-btn .btn-group {
        display: flex !important;
    }
    .btn-group .btn {
        margin-left: -1px;
    }
    .btn-group .btn:last-child {
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
    }
    .btn-group .form-horizontal .btn[type="submit"] {
      border-top-left-radius: 4px;
      border-bottom-left-radius: 4px;
    }
    .form-horizontal .form-group {
        margin-left: 0;
        margin-right: 0;
    }
    /*
    .form-group .form-control:last-child {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
    */

    @media screen and (min-width: 768px) {
      #adv-search {
          width: auto;
          margin: 0 auto;
      }
      .dropdown.dropdown-lg {
          /*position: static !important;*/
      }
      .dropdown.dropdown-lg .dropdown-menu {
          min-width: 400px;
      }
    }
  </style>
<% end %>