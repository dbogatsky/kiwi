<div class="modal fade conversation-complete-quote-modal-form" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" data-backdrop="static" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
        <h4 class="modal-title">Quote Status</h4>
      </div>
      <div class="modal-body">
        <p>Update the status and any notes to complete the quote</p>
        <%= form_tag(update_quote_account_path(account), method: :patch) do %>
          <div class="panel panel-default">
              <div class="panel-body">
                <div class="row row-pad-5">
                  <div class="col-lg-12">
                   <select class="form-control input-sm" name="conversation_item[status]" required="required">
                      <option value=''>-select status-</option>
                      <option value="accepted">Accepted</option>
                      <option value="rejected">Rejected</option>
                      <option value="closed">Closed</option>
                  </select>
                  </div>
                </div>
                <div class="row row-pad-5">
                  <div class="col-lg-12">
                    <textarea class="form-control wysihtml5"rows="5" placeholder="Notes" id='complete_quote_editor' name="conversation_item[notes]"></textarea>
                  </div>
                </div>
                 <input type="hidden" name="conversation_item[id]">
                 <input type="hidden" name="info">
              </div><!-- panel-body -->
              <div class="panel-footer">
                <%=submit_tag 'Save',  data: {disable_with: "Saving..." }, class: "btn btn-primary"%>
              </div>
          </div><!-- panel -->
        <% end %>
      </div><!-- modal body -->
    </div><!-- modal content -->
  </div><!-- modal dialog -->
</div><!-- modal -->

<script type="text/javascript">
  $(".conversation-complete-quote-modal-form").on("hidden.bs.modal", function(){
    complete_quote_editor.data("wysihtml5").editor.setValue('');
  });
</script>