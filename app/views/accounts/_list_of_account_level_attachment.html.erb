<div class="table-responsive">
  <table class="table mb30">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date/Time</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%if attachments.count > 0%>
        <% attachments.each do |media| %>
        <tr>
          <td><%=link_to media.name, image_path(media.urls.thumb), target: '_blank'%></td>
          <td><%=media.created_at.to_datetime.in_time_zone(current_user.time_zone).strftime("%a %b %d %Y at %I:%M %p ")%></td>
          <td>
            <%=link_to delete_account_attachment_account_path(@account, destroy: true,attachment_id: media.id), remote: :true, method: :patch do%>
              <i class="fa fa-trash-o"></i>
            <%end%>
          </td>
        </tr>
        <% end %>
      <%end%>
    </tbody>
  </table>
</div>
