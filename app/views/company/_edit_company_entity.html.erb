<div class="modal fade" id="edit_company_entity">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Company Entity</h4>
      </div>
      <div class="modal-body entry-modal">
        <%= form_tag '#', class: 'form-horizontal', method: :patch do %>
          <div class="div-oth-input">
            <div class="form-group">
              <%= text_field_tag 'company_entity[name]' , nil, class: 'form-control', placeholder: 'Entity Name'%>
            </div>
            <div class="form-group">
              <%= text_area_tag 'company_entity[description]', nil, class: 'form-control', placeholder: 'Entity description'%>
            </div>
          </div>
          <%= submit_tag "Save", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>