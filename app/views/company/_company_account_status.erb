<div id="account-status-add" class="modal fade account-status-add" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" data-backdrop="static" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">&times;</button>
            <h4 class="modal-title">Account Status</h4>
        </div>
        <div class="modal-body">
	    <%= form_tag(account_status_url) do |f| %>
        <p>Add or edit the account status by providing the details below and clicking save</p>
        <div class="panel panel-default">
            <div class="panel-body">
              <div class="row row-pad-5">
                <div class="col-lg-10">
	              <input type="hidden" name="account-status-id" id="account-status-id" />
                  <input type="text" name="account-status-name" id="account-status-name" placeholder="Status Name" class="form-control"  required="required" />
                </div>
              </div><!-- row -->
              <div class="row row-pad-5">
              <div class="col-lg-10">
                <input type="text" name="account-status-color" id="account-status-color" placeholder="Color" class="form-control colorpicker-input"  />
				<span id="colorSelector" class="colorselector">
                    <span></span>
                </span>
                </div>
              </div><!-- row -->
              <textarea class="form-control" rows="5" name="account-status-desc" id="account-status-desc" placeholder="Description" required="required"></textarea>
            </div><!-- panel-body -->
            <div class="panel-footer">
              <button class="btn btn-primary">Save</button>
            </div>
        </div><!-- panel -->
        <% end %>
        </div><!-- modal body -->
    </div><!-- modal content -->
  </div><!-- modal dialog -->
</div><!-- modal -->
