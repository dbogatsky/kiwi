<div id="confirm_box" class="modal fade confirm-box-modal-form" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" data-backdrop="static" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
        <%= form_tag account_transfers_path, html: {class: "form-horizontal"}, remote: :true, method: :post  do %>
          <div class="panel panel-default" style="text-align: center">
            <div class="panel-body">
              <div class="row row-pad-5">
                <%= hidden_field_tag :from_user_id, params[:from_user_id] %>
                <%= hidden_field_tag :to_user_id, params[:to_user_id] %>

                <p>Are you sure you wish to complete this account transfer.</p>
                <p>From: {<%= from_user.first_name %> <%= from_user.last_name %>} </p>
                <p>To: {<%= to_user.first_name %> <%= to_user.last_name %>} </p>
              </div>
            </div>
            <button type="submit" class="btn btn-default btn-sm" id="yes">Yes</button>
            <button class="btn btn-default btn-sm" data-dismiss="modal">No</button>
          </div><!-- panel -->
        <% end %>
      </div><!-- modal body -->
    </div><!-- modal content -->
  </div><!-- modal dialog -->
</div><!-- modal -->



